      <h1 class="display-5 fw-light text-capitalize"><%= friend.first_name %> <%= friend.last_name %></h1>
      <p class="col-md-8 fw-light fs-5 text-capitalize"><%= friend.email %> | <%= friend.phone %></p>
      <%# <button class="btn btn-primary btn-lg" type="button">Example button</button> %>
      <p>
        <strong>Twitter:</strong>
        <%= friend.twitter %>
      </p>
    </div>
  </div>
</section>